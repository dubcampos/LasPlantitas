<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Actividades.LogingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textColor="@color/colorVerde"
            android:layout_height="79dp"
            android:textSize="30dp"
            android:text="Bienvenido a La comunidad YurApp" />

        <ImageView
            android:id="@+id/imagen_usuario"
            android:layout_width="match_parent"
            android:layout_height="186dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/common_google_signin_btn_icon_dark_focused" />

        <TextView
            android:id="@+id/txt_email"
            android:textAlignment="center"

            android:layout_width="match_parent"
            android:layout_marginTop="40dp"
            android:layout_height="73dp"
            android:text="Email" />

        <TextView
            android:id="@+id/txt_nombre"
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:layout_height="73dp"
            android:text="Nombre"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btn_cierre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            style="@style/FirebaseUI.Button.AccountChooser.PhoneButton"
            android:text="Salir"
            android:onClick="salir"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textAlignment="center"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>